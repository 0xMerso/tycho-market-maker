datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// common model for timestamps & soft delete would be better handled at app level


model Configuration {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  values    Json
  hash      String
  instances Instance[]
}

model Instance {
  id              Int            @id @default(autoincrement())
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  config          Json
  Configuration   Configuration? @relation(fields: [configurationId], references: [id])
  configurationId Int?
  startedAt       DateTime       @default(now())
  endedAt         DateTime?
  logs            Log[]
}

model Log {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  category   String // e.g. 'start', 'trade', 'error', 'end'
  instanceId Int
  instance   Instance @relation(fields: [instanceId], references: [id])
  trades     Trade[]
  prices     Price[]
}

model Trade {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  logId     Int
  log       Log      @relation(fields: [logId], references: [id])
  values    Json
}

model Price {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  logId     Int
  log       Log      @relation(fields: [logId], references: [id])
  value     Json // market snapshot, prices, etc
}