datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// common model for timestamps & soft delete would be better handled at app level

model Configuration {
  id                String        @id @default(uuid())
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  // ðŸ’½ Data
  values            Json
  // ðŸ”Ž Uniqueness filtering
  hash              String
  // ðŸ”Ž Filtering values
  chainId           Int
  baseTokenAddress  String
  quoteTokenAddress String
  instances         Instance[]
}

model Instance {
  id              String            @id @default(uuid())
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  // ðŸ’½ Data
  config          Json
  Configuration   Configuration? @relation(fields: [configurationId], references: [id])
  configurationId String?
  startedAt       DateTime       @default(now())
  endedAt         DateTime?
  commit          String
  // ðŸ”Ž Uniqueness filtering
  identifier            String
  trades          Trade[]
  prices          Price[]
}

model Trade {
  id         String      @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  instanceId String
  instance   Instance @relation(fields: [instanceId], references: [id])
  values     Json
}


// Rename MarketContext with inventory, gas, etc.

model Price {
  id         String      @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  instanceId String
  instance   Instance @relation(fields: [instanceId], references: [id])
  value      Json // market snapshot, prices, etc
}